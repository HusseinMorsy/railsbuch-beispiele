<h2><%= t "text.login" %></h2>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :email, t("text.email") %>
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p>
    <%= label_tag :password, t("text.password") %>
    <%= password_field_tag :password %>
  </p>
  <p><%= submit_tag t("text.login") %></p>
<% end %>